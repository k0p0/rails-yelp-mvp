
<div class="container">
<div class="row">

  <h1>Restaurants</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>Category</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.phone_number %></td>
          <td><%= restaurant.category %></td>
          <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, restaurant %></td>

          <td><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_restaurant_path(restaurant) %></td>
          <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Add Restaurant', new_restaurant_path, class:'btn btn-primary' %>
</div>

</div>


